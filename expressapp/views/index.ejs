<!DOCTYPE html>
<html>

<head>
  <title>ðŸ“° NewsGPT </title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
  <style>
    body {
      background-color: #F8F8FF;
    }

    header {
      background-color: #3a2902;
      color: #FFFFFF;
      padding: 40px;
      text-align: center;
      font-size: 36px;
      font-weight: bold;
      margin-bottom: 40px;
      background-image: url("images/background.png");
      background-size: cover;
    }

    label {
      color: #333333;
      font-weight: bold;
      font-size: 20px;
      margin-bottom: 10px;
      text-align: center;
    }

    input[type="submit"] {
      background-color: #333333;
      color: #FFFFFF;
      padding: 10px 20px;
      border-radius: 5px;
      border: none;
      cursor: pointer;
      font-size: 20px;
    }

    textarea {
      width: 100%;
      height: 50vh;
      padding: 20px;
      border-radius: 5px;
      border: 1px solid #CCCCCC;
      background-color: #FFFFFF;
      color: #333333;
      font-size: 20px;
      margin-top: 20px;
      overflow: auto;
      /* allow vertical resizing */
    }

    footer {
      background-color: #2f210212;
      border-top: 1px solid #ccc;
      padding: 20px;
      width: 100%;
      text-align: center;
      position: absolute;
      bottom: 0;
    }
  </style>
</head>

<body>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
    crossorigin="anonymous"></script>
  <header>
    <div style="text-shadow: 2px 2px #272727;">ðŸ“° NewsGPT</div>
  </header>
  <div class="container">
    <div style="padding-bottom: 20px">
      <h2>Last Update</h2>
      <span id="last-update-time"></span>
    </div>

    <form onsubmit="submitForm(event)">
      <div class="row">
        <div class="col">
          <label for="category" class="form-label">Category</label>
          <select id="category" class="form-select form-select-lg sm-3" aria-label=".form-select-lg example"
            name="category">
            <option value="all" selected>All</option>
            <option value="politics">Politics</option>
            <option value="business">Business</option>
            <option value="sports">Sports</option>
            <option value="technology">Technology</option>
          </select>
        </div>
        <div class="col">
          <label for="length" class="form-label">Length</label>
          <select id="length" class="form-select form-select-lg sm-3 aria-label=" .form-select-lg example"
            name="length">
            <option value="short" selected>Short</option>
            <option value="medium">Medium</option>
            <option value="long">Long</option>
          </select>
        </div>
      </div>

      <div class="row">
        <div style="padding-top:20px">
          <input type="submit" value="Submit">
        </div>
      </div>
    </form>
    <br><br>
    <div class="row">
      <h2 for="output">Summarized News Headlines</label>
        <textarea id="output" class="form-control" name="output" style="font-size:1.25rem; padding:20px" readonly></textarea>
    </div>

  </div>
  </div>
  <footer>
    <p>&copy; Created by: You Liang Tan and Louis Nguyen</p>
  </footer>
</body>


</html>
<script>
  function submitForm(event) {
    event.preventDefault();
    const category = document.getElementById("category").value;
    const length = document.getElementById("length").value;
    const data = JSON.stringify({
      category,
      // region,
      length
    });
    fetch('/api/submit_news_form', {
      method: 'POST',
      body: data,
      headers: {
        'Content-Type': 'application/json'
      }
    })
      .then(response => response.json())
      .then(data => {
        document.getElementById("output").value = data.headlines.trim();
      })
      .catch(error => console.error(error));
  }

  // Define function to make API call and update HTML
  function getLatestUpdate() {
    console.log("Getting latest update...")
    fetch('/api/last_update')
      .then(response => response.text())
      .then(data => {
        console.log(data);
        timestamp_ms = Number(data) * 1000
        data = new Date(timestamp_ms).toLocaleString();
        document.getElementById('last-update-time').innerHTML = data;
      })
      .catch(error => console.error(error));
  }

  // Call function on page load
  window.onload = getLatestUpdate;
</script>